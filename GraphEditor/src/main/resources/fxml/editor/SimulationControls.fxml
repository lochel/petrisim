<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane animated="false" text="Simulation" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.unibi.agbi.gnius.business.controller.SimulationControlsController">
    <content>
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="buttonSimStart" mnemonicParsing="false" text="Start" />
                                <Button fx:id="buttonSimPause" mnemonicParsing="false" text="Pause" />
                                <Button fx:id="buttonSimStop" mnemonicParsing="false" text="Stop" />
                            </children>
                        </HBox>
                        <GridPane alignment="TOP_CENTER" hgap="10.0" vgap="5.0">
                            <children>
                                <Label text="Start Time" />
                                <TextField fx:id="tfSimStartTime" GridPane.columnIndex="1" />
                                <Label prefWidth="75.0" text="Stop Time" GridPane.rowIndex="1" />
                                <TextField fx:id="tfSimStopTime" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Intervals" GridPane.rowIndex="2" />
                                <TextField fx:id="tfSimIntervals" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Integrator" GridPane.rowIndex="3" />
                                <ChoiceBox fx:id="cbSimIntegrator" value="dassl" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints prefWidth="75.0" />
                                <ColumnConstraints prefWidth="85.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                        <ProgressBar fx:id="simProgress" progress="0.0" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </content>
</TitledPane>
