<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" 
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" 
      fx:id="simControlsContainer" fx:controller="edu.unibi.agbi.gnius.business.controller.simulation.SimulationController">
    <children>
        <HBox fx:id="simControls" alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Simulation Controls" underline="true" />
                <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="simControlsStart" mnemonicParsing="false" text="Start" onAction="#StartSimulation" />
                        <Button fx:id="simControlsStop" mnemonicParsing="false" text="Stop" onAction="#StopSimulation" disable="true" />
                        <ProgressBar fx:id="simControlsProgress" progress="0.0" />
                    </children>
                </HBox>
                <Button fx:id="simControlsHide" mnemonicParsing="false" text="x">
                    <font>
                        <Font name="System Bold" size="7.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
        <HBox fx:id="simControlsOptions" alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Time Start:" />
                <TextField fx:id="simControlsStartTime" text="0.0" disable="true" />
                <Label text="Time Stop:" />
                <TextField fx:id="simControlsStopTime" text="1.0" />
                <Label text="Intervals:" />
                <TextField fx:id="simControlsIntervals" text="100" />
                <Label text="Integrator:" />
                <ChoiceBox fx:id="simControlsIntegrator" value="dassl">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="dassl" />
                            <String fx:value="euler" />
                            <String fx:value="lobatto2" />
                            <String fx:value="lobatto4" />
                            <String fx:value="lobatto6" />
                            <String fx:value="radau1" />
                            <String fx:value="radau3" />
                            <String fx:value="radau5" />
                            <String fx:value="rungekutta" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </HBox>
    </children>
</VBox>