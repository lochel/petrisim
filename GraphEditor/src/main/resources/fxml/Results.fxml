<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.unibi.agbi.gnius.business.controller.ResultsController">
    <children>
        <TitledPane animated="false" text="Add">
            <content>
                <AnchorPane>
                    <children>
                        <GridPane hgap="10.0" vgap="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" />
                                <ColumnConstraints hgrow="SOMETIMES" />
                                <ColumnConstraints hgrow="SOMETIMES" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Simulation:" alignment="TOP_LEFT" />
                                <ChoiceBox fx:id="simulationChoices" minWidth="150.0" GridPane.columnIndex="1" />
                                <TextField fx:id="simulationFilterInput" promptText="Filter simulation name..." GridPane.columnIndex="2" />
                                <Label text="Element:" GridPane.rowIndex="1" />
                                <ChoiceBox fx:id="elementChoices" minWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <TextField fx:id="elementFilterInput" promptText="Filter element name..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <Label text="Value:" GridPane.rowIndex="2" />
                                <ChoiceBox fx:id="valueChoices" minWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="valueFilterInput" promptText="Filter value..." GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                <Button mnemonicParsing="false" onAction="#AddSelectedToChart" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" expanded="false" text="Edit">
            <content>
                <AnchorPane>
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <TableView fx:id="tableView">
                                    <columns>
                                        <TableColumn fx:id="columnSimulation" maxWidth="1.7976931348623157E308" text="Simulation" />
                                        <TableColumn fx:id="columnElementId" maxWidth="1.7976931348623157E308" prefWidth="60.0" text="ID" />
                                        <TableColumn fx:id="columnElementName" maxWidth="1.7976931348623157E308" text="Name" />
                                        <TableColumn fx:id="columnValue" maxWidth="1.7976931348623157E308" text="Value" />
                                        <TableColumn fx:id="columnEnable" maxWidth="1.7976931348623157E308" prefWidth="60.0" text="Enabled" />
                                        <TableColumn fx:id="columnDrop" maxWidth="1.7976931348623157E308" prefWidth="60.0" text="Drop" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="X-Label:" />
                                        <TextField fx:id="xLabelInput" />
                                        <Label text="Y-Label:" />
                                        <TextField fx:id="yLabelInput" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" maxHeight="Infinity" text="Graph" VBox.vgrow="ALWAYS">
            <content>
                <AnchorPane>
                    <children>
                        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <LineChart fx:id="lineChart" HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <NumberAxis />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis side="LEFT" />
                                    </yAxis>
                                </LineChart>
                                <VBox prefWidth="100.0" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
    </children>
</VBox>
