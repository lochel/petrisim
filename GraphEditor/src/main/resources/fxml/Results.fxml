<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.unibi.agbi.gnius.business.controller.ResultsWindowController">
    <children>
        <TitledPane animated="false" text="Add Data">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <GridPane hgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" maxWidth="100.0" minWidth="50.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="507.99999237060547" minWidth="10.0" prefWidth="507.99999237060547" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label alignment="TOP_LEFT" text="Simulation:" />
                                <ChoiceBox fx:id="simulationChoiceBox" minWidth="150.0" GridPane.columnIndex="1" />
                                <Label text="Element:" GridPane.rowIndex="1" />
                                <ChoiceBox fx:id="elementChoiceBox" minWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Value:" GridPane.rowIndex="2" />
                                <ChoiceBox fx:id="valueChoiceBox" minWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Button mnemonicParsing="false" onAction="#AddSelectedToChart" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </Button>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" expanded="false" text="Selected Data">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <TableView fx:id="tableView" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="columnSimulation" maxWidth="1.7976931348623157E308" prefWidth="75.0" text="Simulation" />
                                <TableColumn fx:id="columnElementType" maxWidth="1.7976931348623157E308" prefWidth="75.0" text="Type" />
                                <TableColumn fx:id="columnElementId" maxWidth="1.7976931348623157E308" prefWidth="75.0" text="ID" />
                                <TableColumn fx:id="columnValue" maxWidth="1.7976931348623157E308" prefWidth="75.0" text="Value" />
                                <TableColumn fx:id="columnEnable" maxWidth="1.7976931348623157E308" prefWidth="75.0" text="Enabled" />
                                <TableColumn fx:id="columnDrop" maxWidth="1.7976931348623157E308" prefWidth="75.0" text="Drop" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" maxHeight="Infinity" text="Graph" VBox.vgrow="ALWAYS">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                    <children>
                        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <LineChart fx:id="lineChart" HBox.hgrow="ALWAYS">
                                    <xAxis>
                                        <NumberAxis label="Time" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis label="Marks / Token" side="LEFT" />
                                    </yAxis>
                                </LineChart>
                                <VBox prefWidth="100.0" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
    </children>
</VBox>
